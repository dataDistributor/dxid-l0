# Minimal test Dockerfile
FROM rust:1.74.0

WORKDIR /app

# Create a simple Rust project
RUN cargo new --bin test-project
WORKDIR /app/test-project

# Add a simple dependency
RUN echo 'serde = "1"' >> Cargo.toml

# Create a simple main.rs
RUN echo 'fn main() { println!("Hello, Railway!"); }' > src/main.rs

# Try to build
RUN cargo build --release

# Show it works
RUN ./target/release/test-project
